{
    "name": "stremio-custom-catalogs",
    "version": "1.0.0",
    "description": "Stremio Custom Catalogs Addon",
    "main": "server/src/index.js",
    "scripts": {
        "install-client": "npm --prefix client install",
        "install-server": "npm --prefix server install",
        "build-client": "npm --prefix client run build",
        "postinstall": "npm run install-server",
        "prestart": "cd server && npx prisma db push --accept-data-loss",
        "start": "node server/src/index.js",
        "dev": "concurrently \"npm run dev --prefix server\" \"npm run dev --prefix client\""
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "concurrently": "^8.0.0"
    }
}