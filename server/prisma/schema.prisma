generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  password String
  catalogs Catalog[]
}

model Catalog {
  id        String        @id @default(uuid())
  name      String
  type      String
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CatalogItem[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model MediaItem {
  id               String        @id @default(uuid())
  tmdbId           String
  type             String
  title            String
  poster           String?
  genres           String?       // JSON array as string
  imdbRating       String?
  description      String?
  runtime          String?
  releaseDate      String?
  rating           Float?
  background       String?
  logo             String?
  actors           String?       // "#" separated list
  directors        String?       // "#" separated list
  imdbId           String?
  lastEpisodeDate  String?       // For series only
  catalogs         CatalogItem[]
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt

  @@unique([tmdbId, type])
}

model CatalogItem {
  id          String    @id @default(uuid())
  catalogId   String
  catalog     Catalog   @relation(fields: [catalogId], references: [id], onDelete: Cascade)
  mediaItemId String
  mediaItem   MediaItem @relation(fields: [mediaItemId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())

  @@unique([catalogId, mediaItemId])
}
